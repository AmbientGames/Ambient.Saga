<?xml version="1.0" encoding="utf-8"?>
<Achievements xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="Ambient.Domain ..\..\..\..\..\Ambient.Domain\DefinitionXsd\Gameplay\Gameplay.xsd" xmlns="Ambient.Domain">
  <Achievement RefName="ACH_COMPLETE_KAGOSHIMA" DisplayName="Legend of Kagoshima" Description="Write your name in the annals of Kagoshima's history by completing the main quest.">
    <Criteria Type="SagaArcsCompleted" Threshold="3" />
  </Achievement>
  <Achievement RefName="ACH_DEFEAT_ALL_BOSSES_KAGOSHIMA" DisplayName="Nemesis" Description="Become the bane of all boss creatures throughout Kagoshima.">
    <Criteria Type="CharactersDefeatedByType" CharacterType="Boss" Threshold="6" />
  </Achievement>
  <Achievement RefName="ACH_EXPLORER_KAGOSHIMA" DisplayName="Pathfinder" Description="Blaze trails to every destination in Kagoshima.">
    <Criteria Type="SagaArcsDiscovered" Threshold="3" />
  </Achievement>
  <Achievement RefName="ACH_SOCIAL_KAGOSHIMA" DisplayName="People Person" Description="Introduce yourself to all the characters you encounter in Kagoshima.">
    <Criteria Type="UniqueCharactersMet" Threshold="101" />
  </Achievement>
  <Achievement RefName="ACH_DIALOGUE_MASTER_KAGOSHIMA" DisplayName="Master Conversationalist" Description="Exhaust every dialogue option with the people of Kagoshima.">
    <Criteria Type="DialogueTreesCompleted" Threshold="101" />
  </Achievement>
  <Achievement RefName="ACH_COLLECTOR_KAGOSHIMA" DisplayName="Perfectionist" Description="Leave no token unclaimed in your journey through Kagoshima.">
    <Criteria Type="QuestTokensEarned" Threshold="3" />
  </Achievement>
  <Achievement RefName="ACH_MERCHANT_KAGOSHIMA" DisplayName="Patron" Description="Support the commerce of Kagoshima by trading with every vendor.">
    <Criteria Type="ItemsTraded" Threshold="130" />
  </Achievement>
  <Achievement RefName="ACH_DIPLOMAT_KAGOSHIMA" DisplayName="Diplomat" Description="Forge friendships with the people of Kagoshima through kindness.">
    <Criteria Type="TraitsAssignedByType" TraitType="Friendly" Threshold="50" />
  </Achievement>
</Achievements>