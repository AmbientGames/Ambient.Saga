<?xml version="1.0" encoding="utf-8"?>
<SagaTriggerPatterns xmlns="Ambient.Domain"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="Ambient.Domain ..\..\..\..\DefinitionXsd\Gameplay\Gameplay.xsd">

    <!-- ========================================
         ENCOUNTER TRIGGER PATTERNS
         Examples for open-source developers
         ======================================== -->

    <!-- STANDARD Saga - Basic three-ring pattern -->
    <SagaTriggerPattern RefName="StandardSaga"
                    DisplayName="Standard Saga"
                    Description="Default three-ring approach for temples and landmarks"
                    EnforceProgression="false">

        <!-- Outer ring: Approach zone -->
        <SagaTrigger RefName="approach" DisplayName="Approach" EnterRadius="45.0" Tags="approach,outer">
            <Spawn>
                <CharacterRef>Traveler_Witness</CharacterRef>
            </Spawn>
        </SagaTrigger>

        <!-- Middle ring: Main area -->
        <SagaTrigger RefName="main" DisplayName="Main Area" EnterRadius="25.0" Tags="main">
            <Spawn>
                <CharacterRef>Mysterious_Fox</CharacterRef>
            </Spawn>
        </SagaTrigger>

        <!-- Inner ring: Temple center -->
        <SagaTrigger RefName="center" DisplayName="Temple Center" EnterRadius="15.0" Tags="inner,altar">
            <!-- Empty - just for discovery/landmark -->
        </SagaTrigger>
    </SagaTriggerPattern>

    <!-- SHADOW SINGLE - Simple single Dark creature spawn -->
    <SagaTriggerPattern RefName="ShadowSingle"
                    DisplayName="Single Dark Creature Encounter"
                    Description="Single dark creature at close range - good for training"
                    EnforceProgression="false">

        <SagaTrigger RefName="shadow_spawn" DisplayName="Dark Creature Appears" EnterRadius="20.0" Tags="combat,shadow">
            <Spawn>
                <CharacterArchetypeRef>RandomDarkCreature</CharacterArchetypeRef>
            </Spawn>
        </SagaTrigger>
    </SagaTriggerPattern>

    <!-- SHADOW ELEMENTAL - Specific affinity Shadow -->
    <SagaTriggerPattern RefName="ShadowFire"
                    DisplayName="Fire Dark Creature Encounter"
                    Description="Fire-affinity Shadow (weak to Ice)"
                    EnforceProgression="false">

        <SagaTrigger RefName="fire_shadow" DisplayName="Fire Shadow" EnterRadius="20.0" Tags="combat,fire">
            <Spawn>
                <CharacterRef>Fiend_Avenger</CharacterRef>
            </Spawn>
        </SagaTrigger>
    </SagaTriggerPattern>

    <SagaTriggerPattern RefName="ShadowIce"
                    DisplayName="Ice Dark Creature Encounter"
                    Description="Ice-affinity Shadow (weak to Fire)"
                    EnforceProgression="false">

        <SagaTrigger RefName="ice_shadow" DisplayName="Ice Shadow" EnterRadius="20.0" Tags="combat,ice">
            <Spawn>
                <CharacterRef>Phantom_Chilling</CharacterRef>
            </Spawn>
        </SagaTrigger>
    </SagaTriggerPattern>

    <!-- SHADOW PACK - Multiple Shadows at once (EXAMPLE: Using Count attribute) -->
    <SagaTriggerPattern RefName="ShadowPack"
                    DisplayName="Dark Creature Pack"
                    Description="Multiple Shadows spawn together using Count attribute - higher difficulty"
                    EnforceProgression="false">

        <SagaTrigger RefName="pack_spawn" DisplayName="Shadow Pack" EnterRadius="25.0" Tags="combat,pack">
            <Spawn Count="3">
                <CharacterArchetypeRef>RandomDarkCreature</CharacterArchetypeRef>
            </Spawn>
        </SagaTrigger>
    </SagaTriggerPattern>

    <!-- SHADOW WAVES - Concentric rings spawn in sequence (EXAMPLE: Mix of Count and multiple Spawn elements) -->
    <SagaTriggerPattern RefName="ShadowWaves"
                    DisplayName="Dark Creature Wave Gauntlet"
                    Description="Multiple waves of Shadows as player approaches - demonstrates Count and multiple Spawn variety"
                    EnforceProgression="false">

        <!-- Wave 1: Outer ring at 40m - uses Count for 2 identical enemies -->
        <SagaTrigger RefName="wave1" DisplayName="First Wave" EnterRadius="40.0" Tags="combat,wave1">
            <Spawn Count="2">
                <CharacterArchetypeRef>RandomDarkCreature</CharacterArchetypeRef>
            </Spawn>
        </SagaTrigger>

        <!-- Wave 2: Middle ring at 25m - uses multiple Spawn for variety -->
        <SagaTrigger RefName="wave2" DisplayName="Second Wave" EnterRadius="25.0" Tags="combat,wave2">
            <Spawn>
                <CharacterRef>Fiend_Avenger</CharacterRef>
            </Spawn>
            <Spawn>
                <CharacterRef>Phantom_Chilling</CharacterRef>
            </Spawn>
            <Spawn>
                <CharacterArchetypeRef>RandomDarkCreature</CharacterArchetypeRef>
            </Spawn>
        </SagaTrigger>

        <!-- Wave 3: Inner ring at 15m - single mini-boss -->
        <SagaTrigger RefName="wave3" DisplayName="Final Wave" EnterRadius="15.0" Tags="combat,wave3,boss">
            <Spawn>
                <CharacterArchetypeRef>MiniBossDarkCreature</CharacterArchetypeRef>
            </Spawn>
        </SagaTrigger>
    </SagaTriggerPattern>

    <!-- MINI-BOSS - Single powerful Shadow -->
    <SagaTriggerPattern RefName="MiniBoss"
                    DisplayName="Mini-Boss Encounter"
                    Description="Single powerful Shadow - mini-boss tier"
                    EnforceProgression="false">

        <SagaTrigger RefName="miniboss_spawn" DisplayName="Mini-Boss Appears" EnterRadius="25.0" Tags="combat,miniboss">
            <Spawn>
                <CharacterArchetypeRef>MiniBossDarkCreature</CharacterArchetypeRef>
            </Spawn>
        </SagaTrigger>
    </SagaTriggerPattern>

    <!-- BOSS APPROACH - Progressive difficulty leading to boss (EXAMPLE: Mixed spawns) -->
    <SagaTriggerPattern RefName="BossApproach"
                    DisplayName="Boss Approach Pattern"
                    Description="Encounters intensify as you approach the boss - enforced progression recommended"
                    EnforceProgression="true">

        <!-- Outer: Warning encounter -->
        <SagaTrigger RefName="warning" DisplayName="Ominous Presence" EnterRadius="50.0" Tags="approach,warning">
            <Spawn>
                <CharacterRef>Traveler_Witness</CharacterRef>
            </Spawn>
        </SagaTrigger>

        <!-- Middle: Guardian Shadows - mix of specific and random -->
        <SagaTrigger RefName="guardians" DisplayName="Guardian Shadows" EnterRadius="35.0" Tags="combat,guardians">
            <Spawn>
                <CharacterRef>Elemental_Stormy</CharacterRef>
            </Spawn>
            <Spawn>
                <CharacterArchetypeRef>RandomDarkCreature</CharacterArchetypeRef>
            </Spawn>
        </SagaTrigger>

        <!-- Near: Mini-boss gatekeeper -->
        <SagaTrigger RefName="gatekeeper" DisplayName="Gatekeeper" EnterRadius="20.0" Tags="combat,miniboss">
            <Spawn>
                <CharacterArchetypeRef>MiniBossDarkCreature</CharacterArchetypeRef>
            </Spawn>
        </SagaTrigger>

        <!-- Inner: The Boss -->
        <SagaTrigger RefName="boss" DisplayName="Boss Battle" EnterRadius="10.0" Tags="combat,boss">
            <Spawn>
                <CharacterArchetypeRef>BossDarkCreature</CharacterArchetypeRef>
            </Spawn>
        </SagaTrigger>
    </SagaTriggerPattern>

    <!-- SHADOW SELF - Special boss with dialogue choice -->
    <SagaTriggerPattern RefName="DarkDoppelgangerBoss"
                    DisplayName="Dark Doppelganger Confrontation"
                    Description="Special pattern for confronting your Dark Doppelganger - includes choice"
                    EnforceProgression="false">

        <!-- Outer: Reflection appears -->
        <SagaTrigger RefName="reflection" DisplayName="Your Reflection" EnterRadius="30.0" Tags="story,reflection">
            <Spawn>
                <CharacterRef>Traveler_Witness</CharacterRef>
            </Spawn>
        </SagaTrigger>

        <!-- Inner: Dark Doppelganger boss -->
        <SagaTrigger RefName="shadow_self" DisplayName="Dark Doppelganger" EnterRadius="15.0" Tags="combat,boss,story">
            <Spawn>
                <CharacterRef>Boss_Dark_Doppelganger</CharacterRef>
            </Spawn>
        </SagaTrigger>
    </SagaTriggerPattern>

    <!-- DIVINE GUARDIAN - Oakvale Temple Guardian boss -->
    <SagaTriggerPattern RefName="DivineGuardianBoss"
                    DisplayName="Divine Guardian Trial"
                    Description="Challenge the Divine Guardian of Oakvale Temple"
                    EnforceProgression="false">

        <!-- Outer: Sacred area warning -->
        <SagaTrigger RefName="sacred_warning" DisplayName="Sacred Ground" EnterRadius="40.0" Tags="warning,sacred">
            <Spawn>
                <CharacterRef>Mysterious_Fox</CharacterRef>
            </Spawn>
        </SagaTrigger>

        <!-- Inner: Divine Guardian boss -->
        <SagaTrigger RefName="divine_guardian" DisplayName="Divine Guardian" EnterRadius="20.0" Tags="combat,boss,divine">
            <Spawn>
                <CharacterRef>Boss_Temple_Guardian</CharacterRef>
            </Spawn>
        </SagaTrigger>
    </SagaTriggerPattern>

    <!-- GOLDEN HAND - Rare treasure spawn -->
    <SagaTriggerPattern RefName="GoldenHandRare"
                    DisplayName="Golden Hand Spawn"
                    Description="Rare treasure Shadow - flees quickly"
                    EnforceProgression="false">

        <SagaTrigger RefName="golden_hand" DisplayName="Golden Hand!" EnterRadius="15.0" Tags="combat,rare,treasure">
            <Spawn>
                <CharacterRef>Boss_Golden_Hand</CharacterRef>
            </Spawn>
        </SagaTrigger>
    </SagaTriggerPattern>

    <!-- REAPER - Ultimate challenge -->
    <SagaTriggerPattern RefName="ReaperUltimate"
                    DisplayName="The Reaper Encounter"
                    Description="Death incarnate - ultimate difficulty boss"
                    EnforceProgression="false">

        <!-- Outer: Chains dragging (warning) -->
        <SagaTrigger RefName="chains" DisplayName="Dragging Chains" EnterRadius="50.0" Tags="warning,death">
            <Spawn>
                <CharacterRef>Traveler_Witness</CharacterRef>
            </Spawn>
        </SagaTrigger>

        <!-- Inner: The Reaper -->
        <SagaTrigger RefName="reaper" DisplayName="The Reaper" EnterRadius="25.0" Tags="combat,boss,ultimate">
            <Spawn>
                <CharacterRef>Boss_Reaper</CharacterRef>
            </Spawn>
        </SagaTrigger>
    </SagaTriggerPattern>

    <!-- MERCHANT ZONE - Shopping area -->
    <SagaTriggerPattern RefName="MerchantShop"
                    DisplayName="Merchant Shop"
                    Description="TradingPost or merchant trading post"
                    EnforceProgression="false">

        <SagaTrigger RefName="shop" DisplayName="Shop" EnterRadius="20.0" Tags="merchant,shop">
            <Spawn>
                <CharacterRef>TradingPost_Merchant</CharacterRef>
            </Spawn>
        </SagaTrigger>
    </SagaTriggerPattern>

    <!-- MIXED ENCOUNTER - Random variety (EXAMPLE: Random archetype selection) -->
    <SagaTriggerPattern RefName="MixedEncounter"
                    DisplayName="Mixed Encounter"
                    Description="Could be friend or foe - random selection from archetype pool"
                    EnforceProgression="false">

        <SagaTrigger RefName="mixed" DisplayName="Unknown Presence" EnterRadius="25.0" Tags="mixed,random">
            <Spawn>
                <CharacterArchetypeRef>RandomEncounter</CharacterArchetypeRef>
            </Spawn>
        </SagaTrigger>
    </SagaTriggerPattern>

    <!-- ELEMENTAL GAUNTLET - One of each element (EXAMPLE: Multiple specific spawns in sequence) -->
    <SagaTriggerPattern RefName="ElementalGauntlet"
                    DisplayName="Elemental Gauntlet"
                    Description="Face all four basic elements in sequence - shows progressive single spawns"
                    EnforceProgression="true">

        <!-- Fire at 50m -->
        <SagaTrigger RefName="fire_trial" DisplayName="Fire Trial" EnterRadius="50.0" Tags="combat,fire,trial">
            <Spawn Count="2">
                <CharacterArchetypeRef>FireDarkCreatures</CharacterArchetypeRef>
            </Spawn>
        </SagaTrigger>

        <!-- Ice at 40m -->
        <SagaTrigger RefName="ice_trial" DisplayName="Ice Trial" EnterRadius="40.0" Tags="combat,ice,trial">
            <Spawn Count="2">
                <CharacterArchetypeRef>IceDarkCreatures</CharacterArchetypeRef>
            </Spawn>
        </SagaTrigger>

        <!-- Electric at 30m -->
        <SagaTrigger RefName="electric_trial" DisplayName="Electric Trial" EnterRadius="30.0" Tags="combat,electric,trial">
            <Spawn Count="2">
                <CharacterArchetypeRef>ElectricDarkCreatures</CharacterArchetypeRef>
            </Spawn>
        </SagaTrigger>

        <!-- Wind at 20m -->
        <SagaTrigger RefName="wind_trial" DisplayName="Wind Trial" EnterRadius="20.0" Tags="combat,wind,trial">
            <Spawn Count="2">
                <CharacterArchetypeRef>WindDarkCreatures</CharacterArchetypeRef>
            </Spawn>
        </SagaTrigger>

        <!-- Final boss at 10m -->
        <SagaTrigger RefName="final_boss" DisplayName="Master Trial" EnterRadius="10.0" Tags="combat,boss">
            <Spawn>
                <CharacterArchetypeRef>BossDarkCreature</CharacterArchetypeRef>
            </Spawn>
        </SagaTrigger>
    </SagaTriggerPattern>

    <!-- PEACEFUL LANDMARK - No combat -->
    <SagaTriggerPattern RefName="PeacefulLandmark"
                    DisplayName="Peaceful Landmark"
                    Description="Pure exploration - no combat encounters"
                    EnforceProgression="false">

        <!-- Just discovery zones, no spawns -->
        <SagaTrigger RefName="outer_view" DisplayName="Distant View" EnterRadius="50.0" Tags="exploration">
            <!-- No spawn - just atmospheric -->
        </SagaTrigger>

        <SagaTrigger RefName="close_view" DisplayName="Close View" EnterRadius="25.0" Tags="exploration">
            <!-- No spawn - just atmospheric -->
        </SagaTrigger>

        <SagaTrigger RefName="landmark" DisplayName="Landmark Discovered" EnterRadius="10.0" Tags="exploration,discovery">
            <!-- No spawn - pure landmark -->
        </SagaTrigger>
    </SagaTriggerPattern>

</SagaTriggerPatterns>
